<!doctype html>
<html>

<head>
	<title>Weather Station</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="icon" type="image/png" href="../static/img/compass.png" />
	<link rel="stylesheet" type="text/css"
		href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
	<link rel="stylesheet" type="text/css" href="../static/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
	<link rel="stylesheet" type="text/css" href="../static/css/util.css">
	<link rel="stylesheet" type="text/css" href="../static/css/main.css">
</head>

<body>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
				<span class="login100-form-title p-b-53">
					Aldi Surf Cam
				</span>
				<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
				<% } %>
				<form action="/users/login/" method="post" class="login100-form validate-form flex-sb flex-w">
					<div class="p-t-31 p-b-9">
						<span class="txt1">
							Usuario
						</span>
					</div>
					<div class="wrap-input100 validate-input"
						data-validate="El nombre de usuario es requerido y debe ser un email.">
						<input class="input100" type="text" name="username">
						<span class="focus-input100"></span>
					</div>

					<div class="p-t-13 p-b-9">
						<span class="txt1">
							Contraseña
						</span>
					</div>
					<div class="wrap-input100 validate-input"
						data-validate="La contraseña es requerida y debe ser mayor a 6 digitos.">
						<input class="input100" type="password" id="password" name="password">
						<span class="focus-input100"></span>
					</div>

					<button type="submit" class="container-login100-form-btn m-t-17">
						<button class="login100-form-btn">
							Login
						</button>
					</button>

					<div class="w-full text-center p-t-55">
						<span class="txt2">
							No eres usuario?
						</span>

						<a href="https://wa.link/xkgwse" class="txt2">
							Contactate para registrarte!
						</a>
						<br>
					</div>
					<br>
					<div class="d-flex justify-content-center">
					</div>
				</form>
			</div>
		</div>
	</div>
	<script src="../static/resources/jquery-3.4.1.min.js"></script>
	<script src="../static/resources/main.js"></script>
</body>

</html>